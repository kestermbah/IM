<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="InventoryMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:InventoryMaui"
    xmlns:views="clr-namespace:InventoryMaui.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="InventoryMaui">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

     <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:InventoryView}"
        Route="Inventory" />

     <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:ShopView}"
        Route="Shop" />   
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:AddItemView}"
        Route="AddItem" />
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:DeleteItemView}"
        Route="DeleteItem" />
    <ShellContent 
    Title="Edit Item" 
    ContentTemplate="{DataTemplate views:EditItemPage}" 
    Route="EditItemPage" />    
</Shell>
